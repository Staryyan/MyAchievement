doctype html
html
    head
        title Main

        link(href='/stylesheets/template/style.css' rel='stylesheet')
        link(href='/stylesheets/template/style-responsive.css' rel='stylesheet')
        link(href='/stylesheets/style.css' rel='stylesheet')
    body
        section
            div.left-side.sticky-left-side
                div.left-side-inner
                    ul.nav.nav-pills.nav-stacked.custom-nav
                        li.active
                            a(href='/main')
                                i.fa.fa-home
                                span Home
                        li.menu-list
                            a(href='')
                                i.fa.fa-bullhorn
                                span Notification
                        li.menu-list
                            a(href='')
                                i.fa.fa-th-list
                                span Homework
                        li.menu-list
                            a(href='')
                                i.fa.fa-envelope
                                span Chat
                        li
                            a(href='/')
                                i.fa.fa-sign-in
                                span Log Out
            div.main-content
                div.header-section
                    a.toggle-btn
                        i.fa.fa-bars
                    div.menu-right
                        ul.notification-menu
                            li
                                a.btn.btn-default.dropdown-toggle.info-number(href='' data-toggle='dropdown')
                                    i.fa.fa-envelope-o
                                div.dropdown-menu.dropdown-menu-head.pull-right
                                    h5.title Unread Mail
                                    ul.dropdown-list.normal-list#mail
                            li
                                a.btn.btn-default.dropdown-toggle.info-number(href='' data-toggle='dropdown')
                                    i.fa.fa-bell-o
                                div.dropdown-menu.dropdown-menu-head.pull-right
                                    h5.title Unread Notifications
                                    ul.dropdown-list.normal-list#notification
                            li
                                a.btn.btn-default.dropdown-toggle#name(href='' data-toggle='dropdown') #{name}
                                    span.caret
                                ul.dropdown-menu.dropdown-menu-usermenu.pull-right
                                    li
                                        a(href='')
                                            i.fa.fa-user
                                            label Profiles
                                    li
                                        a(href='')
                                            i.fa.fa-cog
                                            label Settings
                                    li
                                        a(href='/')
                                            i.fa.fa-sign-out
                                            label Log Out
                div.wrapper
                    div.mail-box
                        section.mail-box-info
                            header.header
                                div.btn-toolbar
                                    div.btn-group
                                        button.btn.btn-sm.btn-primary
                                            i.fa.fa-refresh
                            section.mail-list
                                    ul.list-group#mail_list

                    footer 2016 @ Created By Stary.
